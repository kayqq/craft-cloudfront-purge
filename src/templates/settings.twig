{% import "_includes/forms" as forms %}

{{ forms.autosuggestField({
    label: "Access Key ID"|t('aws-s3'),
    id: 'keyId',
    name: 'keyId',
    suggestEnvVars: true,
    value: settings.keyId,
    class: 's3-key-id',
    instructions: 'You can leave this field empty if you are using an EC2 instance with an applicable IAM role assignment.'|t('aws-s3')
}) }}

{{ forms.autosuggestField({
    label: "Secret Access Key"|t('aws-s3'),
    id: 'secret',
    name: 'secret',
    suggestEnvVars: true,
    value: settings.secret,
    class: 's3-secret-key',
    instructions: 'You can leave this field empty if you are using an EC2 instance with an applicable IAM role assignment.'|t('aws-s3')
}) }}

{{ forms.autosuggestField({
    label: "Region"|t('aws-s3'),
    id: 'region',
    class: 'ltr',
    name: 'region',
    suggestEnvVars: true,
    value: settings.region,
    placeholder: 'Region'|t('aws-s3')
}) }}

{{ forms.autosuggestField({
    label: "CloudFront Distribution ID"|t('aws-s3'),
    id: 'cfDistributionId',
    class: 'ltr',
    name: 'cfDistributionId',
    suggestEnvVars: true,
    value: settings.cfDistributionId,
}) }}

{{ forms.autosuggestField({
    label: "CloudFront Path Prefix"|t('aws-s3'),
    instructions: "If youâ€™re using CloudFront as CDN for your assets and have configured subfolders or custom behaviors, enter the path prefix Craft should use when invalidating files."|t('aws-s3'),
    id: 'cfPrefix',
    class: 'ltr',
    name: 'cfPrefix',
    suggestEnvVars: true,
    value: settings.cfPrefix,
    errors: settings.getErrors('cfPrefix')
}) }}

{{ forms.autosuggestField({
    label: "CloudFront Path Suffix"|t('aws-s3'),
    instructions: "Enter the path suffix Craft should use when invalidating files (e.g., \/, \/*, \*)."|t('aws-s3'),
    id: 'cfSuffix',
    class: 'ltr',
    name: 'cfSuffix',
    suggestEnvVars: true,
    value: settings.cfSuffix,
    errors: settings.getErrors('cfSuffix')
}) }}